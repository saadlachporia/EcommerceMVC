@model IEnumerable<EcommerceMVC.Models.Product>

@{
    ViewData["Title"] = "Product List";
    bool isAdmin = User.Identity.IsAuthenticated && User.IsInRole("Admin");
}

<h1>Product List</h1>

@if (isAdmin)
{
    <p>
        <a class="btn btn-primary" href="@Url.Action("Create")">Add New Product</a>
    </p>
}

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Stock</th>
            <th>Actions</th> <!-- Visible for all -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@item.ImagePath" alt="Product Image" width="100" height="100" style="object-fit: cover;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price.ToString("C", new System.Globalization.CultureInfo("en-ZA"))</td>
                <td>@item.Category?.Name</td>
                <td>@item.StockQuantity</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info me-1">View</a>

                    <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productId" value="@item.ProductId" />
                        <input type="hidden" name="quantity" value="1" />
                        <button type="submit" class="btn btn-sm btn-success">Add to Cart</button>
                    </form>

                    @if (isAdmin)
                    {
                        <hr />
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
