@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    body {
        background: #f5f7fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        min-height: 100vh;
        padding: 40px 20px;
    }

    .container {
        max-width: 960px;
        margin: 0 auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        padding: 40px 30px;
    }

    .text-center h1 {
        font-weight: 700;
        color: #5a2a83;
        margin-bottom: 10px;
        letter-spacing: 1.2px;
    }

    .text-center p.lead {
        font-size: 1.25rem;
        color: #6c757d;
        margin-bottom: 40px;
    }

    .d-flex {
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .btn-outline-primary {
        --bs-btn-color: #5a2a83;
        --bs-btn-hover-color: #fff;
        --bs-btn-bg: transparent;
        --bs-btn-border-color: #5a2a83;
        --bs-btn-hover-bg: #5a2a83;
        --bs-btn-hover-border-color: #5a2a83;
        --bs-btn-focus-shadow-rgb: 90, 42, 131;
    }

    .btn-outline-success {
        --bs-btn-color: #2f855a;
        --bs-btn-hover-color: #fff;
        --bs-btn-bg: transparent;
        --bs-btn-border-color: #2f855a;
        --bs-btn-hover-bg: #2f855a;
        --bs-btn-hover-border-color: #2f855a;
        --bs-btn-focus-shadow-rgb: 47, 133, 90;
    }

    .btn-outline-info {
        --bs-btn-color: #319795;
        --bs-btn-hover-color: #fff;
        --bs-btn-bg: transparent;
        --bs-btn-border-color: #319795;
        --bs-btn-hover-bg: #319795;
        --bs-btn-hover-border-color: #319795;
        --bs-btn-focus-shadow-rgb: 49, 151, 149;
    }

    .btn-outline-warning {
        --bs-btn-color: #d69e2e;
        --bs-btn-hover-color: #fff;
        --bs-btn-bg: transparent;
        --bs-btn-border-color: #d69e2e;
        --bs-btn-hover-bg: #d69e2e;
        --bs-btn-hover-border-color: #d69e2e;
        --bs-btn-focus-shadow-rgb: 214, 158, 46;
    }

    .btn-lg {
        padding: 15px 30px;
        font-size: 1.25rem;
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        min-width: 200px;
        text-align: center;
    }

    .btn-lg:hover, .btn-lg:focus {
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        transform: translateY(-3px);
        color: #fff !important;
    }
</style>

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-5">Admin Dashboard</h1>
        <p class="lead">Welcome Admin! You can manage products, categories, users, orders, and more.</p>
    </div>

    <div class="d-flex">
        <a class="btn btn-outline-primary btn-lg" href="@Url.Action("Index", "Products")">
            Manage Products
        </a>
        <a class="btn btn-outline-success btn-lg" href="@Url.Action("Index", "Categories")">
            Manage Categories
        </a>
        <a class="btn btn-outline-info btn-lg" href="@Url.Action("Index", "Orders")">
            Manage Orders
        </a>
        <a class="btn btn-outline-warning btn-lg" href="@Url.Action("Index", "Users")">
            Manage Users
        </a>
    </div>
</div>
