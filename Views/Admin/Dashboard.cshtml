@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="text-center mb-4">
        <h1 class="display-5">Admin Dashboard</h1>
        <p class="lead">Welcome Admin! You can manage products, categories, users, orders, and more.</p>
    </div>

    <div class="d-flex justify-content-center gap-3 flex-wrap">
        <a class="btn btn-outline-primary btn-lg" href="@Url.Action("Index", "Products")">
            Manage Products
        </a>
        <a class="btn btn-outline-success btn-lg" href="@Url.Action("Index", "Categories")">
            Manage Categories
        </a>
        <a class="btn btn-outline-info btn-lg" href="@Url.Action("Index", "Orders")">
            Manage Orders
        </a>
        <a class="btn btn-outline-warning btn-lg" href="@Url.Action("Index", "Users")">
            Manage Users
        </a>
    </div>
</div>
