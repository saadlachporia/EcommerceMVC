@model EcommerceMVC.Models.Order

@{
    ViewData["Title"] = "Order Details";
}

<h1 class="page-title">Order Details</h1>

<style>
    .page-title {
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        color: #111;
        font-family: 'Inter', sans-serif;
        letter-spacing: 0.05em;
    }

    .details-container {
        background: #fff;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgb(0 0 0 / 0.1);
        font-family: 'Inter', sans-serif;
        max-width: 800px;
        margin-bottom: 2rem;
    }

    .details-container h4 {
        font-weight: 700;
        margin-bottom: 1rem;
        color: #222;
        letter-spacing: 0.03em;
    }

    dl.row {
        display: grid;
        grid-template-columns: 180px 1fr;
        row-gap: 1rem;
        column-gap: 2rem;
        margin-bottom: 2rem;
    }

    dt {
        font-weight: 600;
        color: #666;
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 0.05em;
        align-self: center;
    }

    dd {
        margin: 0;
        font-size: 1rem;
        color: #333;
        line-height: 1.4;
        word-wrap: break-word;
    }

    ul.product-list {
        list-style: disc inside;
        padding-left: 1rem;
        margin-top: 0;
        margin-bottom: 0;
        color: #444;
        font-size: 1rem;
    }

    ul.product-list li {
        margin-bottom: 0.4rem;
    }

    .actions {
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 1rem;
    }

    .actions a {
        color: #111;
        text-decoration: none;
        margin-right: 1rem;
        transition: color 0.3s ease;
    }

    .actions a:hover {
        color: #ff3366;
        text-decoration: underline;
    }
</style>

<div class="details-container">
    <h4>Customer Info</h4>
    <dl class="row">
        <dt>Full Name</dt>
        <dd>@Model.FullName</dd>

        <dt>Contact Email</dt>
        <dd>@Model.Email ?? "N/A"</dd>

        <dt>Contact Phone</dt>
        <dd>@Model.Phone ?? "N/A"</dd>
    </dl>

    <h4>Shipping Address</h4>
    <dl class="row">
        <dt>Address</dt>
        <dd>@Model.Address ?? "N/A"</dd>
    </dl>

    <h4>Order Details</h4>
    <dl class="row">
        <dt>Order Date</dt>
        <dd>@Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt>Payment Method</dt>
        <dd>@Model.PaymentMethod</dd>

        <dt>Status</dt>
        <dd>@Model.Status</dd>

        <dt>Tracking Number</dt>
        <dd>@Model.TrackingNumber ?? "N/A"</dd>

        <dt>Products</dt>
        <dd>
            <ul class="product-list">
                @foreach (var item in Model.OrderItems)
                {
                    <li>@item.Product.Name - @item.Quantity x @item.Price.ToString("C")</li>
                }
            </ul>
        </dd>

        <dt>Total Amount</dt>
        <dd>@Model.TotalAmount.ToString("C")</dd>
    </dl>
</div>

<div class="actions">
    <a asp-action="Edit" asp-route-id="@Model.OrderId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
